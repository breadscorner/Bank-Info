@page
@model WebApplication3.Pages.UserRole.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<h1>Assigned Roles</h1>
<p>
    Roles for: @Model.requestedUser
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleVM[0].RoleName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.RoleVM != null) //NUll check for Model
        {
            @foreach (var item in Model.RoleVM)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleName)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

