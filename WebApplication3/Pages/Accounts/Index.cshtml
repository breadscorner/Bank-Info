@page
@model WebApplication3.Pages.ClientAccount.IndexModel

@{
    ViewData["Title"] = "Accounts";
}

<h1>Accounts</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Account Number
            </th>
            <th>
                Account Type
            </th>
            <th>
                Last Name
            </th>
            <th>
                First Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ClientAccounts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountNum)
                </td>
                @* <td>
                    @Html.DisplayFor(modelItem => item.ClientID)
                </td> *@
                <td>
                    @Html.DisplayFor(modelItem => item.AccountType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                @* <td>
                    @Html.DisplayFor(modelItem => item.Balance)
                </td> *@
                <td>
                    <a asp-page="./Details" asp-route-clientID="@item.ClientID" asp-route-accountNum="@item.AccountNum">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
